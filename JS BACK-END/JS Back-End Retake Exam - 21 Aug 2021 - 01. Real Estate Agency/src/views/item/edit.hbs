<section id="edit-page">
    <div class="edit-container">
        <div class="box-image">

        </div>
        <h2 class="box-heading">
            Edit Home
        </h2>

        <form class="form" method="POST">
            <div class="input">
                <input type="text" class="input-field" id="home-name" name="name" value="{{item.name}}" />
                <label class="home-name">Name:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="type" name="type" value="{{item.type}}" />
                <label class="type">Property Type:</label>
                    <option value="Apartment" {{select item.platform "Apartment"}} ></option>
                    <option value="Villa" {{select item.platform "Villa"}} ></option>
                    <option value="House" {{select item.platform "House"}} ></option>
            </div>
            <div class="input">
                <input type="number" class="input-field" id="year" name="year" value="{{item.year}}" />
                <label class="year">Year Built:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="city" name="city" value="{{item.description}}" />
                <label class="city">City</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="homeImage" name="image" value="{{item.image}}" />
                <label class="homeImage">Home Image:</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="description" name="description" value="{{item.description}}" />
                <label class="description">Property Description:</label>
            </div>

            <div class="input">
                <input type="number" class="input-field" id="availablePieces" name="pieces" value="{{item.pieces}}" />
                <label class="availablePieces">Available pieces:</label>
            </div>

            <div class="create-action">
                <button class="create-button" type="submit">Edit</button>
            </div>
        </form>
    </div>
</section>