<section id="create-page">
    <div class="create-container">
        <div class="box-image"></div>

        <h2 class="box-heading"> Add new home</h2>


        <form class="form" method="POST">
            <div class="input">
                <input type="text" class="input-field" id="home-name" placeholder="Real House Luxury Villa..." name="name" value="{{item.name}}" />
                <label class="home-name">Name:</label>
            </div>
            <div class="input">
                <label class="type">Property Type:</label>
                    <select id="type" name="type" value="{{item.type}}" class="input-field">
                        <option value="Apartment" {{select item.platform "Apartment"}} >Apartment</option>
                        <option value="Villa" {{select item.platform "Villa"}} >Villa</option>
                        <option value="House" {{select item.platform "House"}} >House</option>
                    </select>
            </div>
            <div class="input">
                <input type="number" class="input-field" id="year" placeholder="2018..." name="year" value="{{item.year}}" />
                <label class="year">Year Built:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" value="{{item.city}}" />
                <label class="city">City</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="image" value="{{item.image}}" />
                <label class="homeImage">Home Image:</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="description" placeholder="Description..." name="description" value="{{item.description}}" />
                <label class="description">Property Description:</label>
            </div>

            <div class="input">
                <input type="number" class="input-field" id="availablePieces" placeholder="1" name="pieces" value="{{item.pieces}}" />
                <label class="availablePieces">Available pieces:</label>
            </div>

            <div class="create-action">
                <button class="create-button" type="submit">Add</button>
            </div>


        </form>
    </div>
</section>