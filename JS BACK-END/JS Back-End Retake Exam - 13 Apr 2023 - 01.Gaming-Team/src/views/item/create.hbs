<main id="create">
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    <option value="platform">-------</option>
                    <option value="PC" {{ select item.platform "PC" }}>PC</option>
                    <option value="Nintendo" {{ select item.platform "Nintendo"}} >Nintendo</option>
                    <option value="PS4" {{ select item.platform "PS4" }} >PS4</option>
                    <option value="PS5" {{ select item.platform "PS5" }} >PS5</option>
                    <option value="XBOX" {{ select item.platform "XBOX" }} >XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name">
                <label>Image:</label>
                <input type="text" id="image" name="image" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre">
                <label>Description:</label>
                <input id="description" name="description"></input>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>