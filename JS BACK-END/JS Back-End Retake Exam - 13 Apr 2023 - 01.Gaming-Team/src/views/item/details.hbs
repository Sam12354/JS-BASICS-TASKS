<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{items.image}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{items.name}}</h1>
                <h3 id="platform">Platform: {{items.platform}}</h3>
                <p id="price"><span>Price: ${{items.price}}</span></p>
                <p id="genre"><span>Genre: {{items.genre}}</span></p>
                <p id="description">{{items.description}}</p>
            </div>
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isAuthenticated}}
                {{#if isOwner}}
                <div class="author">
                    <a href="/item/{{items._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/item/{{items._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isVoted}}
                <!-- Logged in user who has already buy this game code-->
                    <p class="buy-message">You have already bought this game</p>
                {{else}}
                <!-- Logged in user who has not yet buy this game code-->
                    <a href="/item/{{items._id}}/like" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>