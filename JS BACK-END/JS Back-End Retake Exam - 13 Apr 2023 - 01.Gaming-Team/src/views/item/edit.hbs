<main id="edit">
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form method="POST">
                <label>Platform:</label>
                 <select id="platform" name="platform">
                    <option value="">-------</option>
                    <option value="PC" {{ select item.platform "PC" }}>PC</option>
                    <option value="Nintendo" {{ select item.platform "Nintendo" }}>Nintendo</option>
                    <option value="PS4" {{ select item.platform "PS4" }}>PS4</option>
                    <option value="PS5" {{ select item.platform "PS5" }}>PS5</option>
                    <option value="XBOX" {{ select item.platform "XBOX" }}>XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{item.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{item.image}}" placeholder="https://image.api.playstation.com/vulcan/ap/rnd/202208/0921/dR9KJAKDW2izPbptHQbh3rnj.png">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{item.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{item.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{item.description}}</textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>